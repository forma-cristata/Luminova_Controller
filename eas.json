{
	"cli": {
		"version": ">= 16.0.1",
		"appVersionSource": "remote"
	},
	"build": {
		"development": {
			"developmentClient": true,
			"distribution": "internal",
			"ios": {
				"simulator": false,
				"cache": {
					"disabled": true
				}
			}
		},
		"preview": {
			"distribution": "internal",
			"android": {
				"buildType": "app-bundle",
				"credentialsSource": "local"
			}
		},
		"production": {
			"autoIncrement": true,
			"ios": {
				"distribution": "store"
			},
			"android": {
				"buildType": "apk",
				"credentialsSource": "local"
			}
		},
		"development-simulator": {
			"developmentClient": true,
			"distribution": "internal",
			"ios": {
				"simulator": true,
				"cache": {
					"disabled": true
				}
			},
			"environment": "development"
		}
	},
	"submit": {
		"production": {
			"ios": {
				"appleId": "${APPLE_ID}",
				"ascAppId": "${ASC_APP_ID}",
				"appleTeamId": "${APPLE_TEAM_ID}"
			}
		}
	}
}
