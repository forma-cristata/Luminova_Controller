{  "expo": {
    "name": "Luminova Controller",
    "slug": "Luminova_Controller",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash-screen.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "description": "A React Native LED controller app for creating and managing custom lighting configurations with various animation patterns and color schemes.",
    "keywords": ["LED", "lighting", "controller", "animation", "color", "patterns", "arduino", "neopixel", "FastLED", "controller", "luminova"],
    "privacy": "public",
    "ios": {
		"jsEngine": "hermes",
      "supportsTablet": false,
      "bundleIdentifier": "com.formacristata.luminovacontroller",
      "splash": {
        "image": "./assets/images/splash-screen.png",
        "resizeMode": "contain",
        "backgroundColor": "#000000"
      },
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": ["audio"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#ffffff"
      },
      "splash": {
        "image": "./assets/images/splash-screen.png",
        "resizeMode": "contain",
        "backgroundColor": "#000000"
      },
      "softwareKeyboardLayoutMode": "resize",      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "package": "com.formacristata.luminovacontroller"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/icon.png"
    },    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-screen.png",
          "resizeMode": "contain",
          "backgroundColor": "#000000"
        }
      ],
      [
        "expo-audio",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone."
        }
      ],
      ["expo-router", { "root": "./src/screens" }],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Thesignature.ttf",
            "./assets/fonts/Clearlight-lJlq.ttf"
          ]
        }      ],
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "8b4bbbb4-b7b6-45d9-916b-bfdae31c5909"
      },
      "router": {}
    }
  }
}
